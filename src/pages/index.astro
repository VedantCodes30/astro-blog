---
import BaseLayout from "../layouts/BaseLayout.astro";

const heroContent = {
  heading: "Welcome to My Blog",
  subHeading: "Crafting high-quality web experiences.",
  description:
    "I'm a passionate developer specializing in building fast, beautiful, and accessible websites. Let's collaborate and create something awesome!",
  ctas: [
    {
      text: "Get Started",
      link: "/about",
      style: "primary",
    },
    {
      text: "View Projects",
      link: "/blog/",
      style: "secondary",
    },
  ],
  image: {
    src: "https://images.unsplash.com/vector-1743718927226-6fffd45f9d11?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxpbGx1c3RyYXRpb25zLWZlZWR8NjR8fHxlbnwwfHx8fHw%3D",
    alt: " Hero ",
  },
};
---

<title>Home</title>
<BaseLayout>
  <section class="hero">
    <h1>{heroContent.heading}</h1>
    <h2>{heroContent.subHeading}</h2>
    <p>{heroContent.description}</p>

    <div class="cta">
      {
        heroContent.ctas.map((cta) => (
          <a href={cta.link} class={cta.style}>
            <button>{cta.text}</button>
          </a>
        ))
      }
    </div>
  </section>
  <script is:inline>
    const styles = "background: hotpink; color: white; font-size: 2rem";
    console.log("%c This is why astro is Best", styles);
  </script>
</BaseLayout>

<style>
  .hero {
    margin-top: 8rem;
    display: flex;
    align-items: center;
    justify-content:;
    flex-direction: column;
  }
  .image {
    overflow-y: hidden;
    padding: 1rem;
    display: flex;
    max-width: fit-content;
    gap: 2rem;
    flex-wrap: nowrap;
    flex-direction: row;
  }
  img {
    object-fit: cover;
    width: 200px;
    height: 200px;
    border-radius: 20px;
    transition: 250ms ease-in-out;
    &:hover {
      scale: 1.2;
      filter: drop-shadow(2px 4px 6px black);
    }
  }
  button {
    border-radius: 15px;
    border: none;
    margin: 1rem;
    padding: 1em;
    cursor: pointer;
  }

  .primary button {
    background-color: #2563eb;
    color: white;
  }

  .secondary button {
    background-color: transparent;
    color: #2563eb;
    border: 1px solid #2563eb;
  }
</style>
